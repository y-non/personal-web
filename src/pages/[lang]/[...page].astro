---
import type { GetStaticPaths } from "astro";
import PostPage from "../../components/PostPage.astro";
import Pagination from "../../components/control/Pagination.astro";
import { PAGE_SIZE } from "../../constants/constants";
import MainGridLayout from "../../layouts/MainGridLayout.astro";
import { getSortedPosts } from "../../utils/content-utils";

export const getStaticPaths = (async ({ paginate }) => {
  const allBlogPosts = await getSortedPosts(); // load all posts
  const langs = ["en", "vi"];

  const allPaths = langs.flatMap((lang) => {
    const postsByLang = allBlogPosts.filter((post) => post.data.lang === lang);
    return paginate(postsByLang, {
      pageSize: PAGE_SIZE,
      params: { lang },
    });
  });

  return allPaths;
}) satisfies GetStaticPaths;
// https://github.com/withastro/astro/issues/6507#issuecomment-1489916992

const { page } = Astro.props;

const len = page.data.length;
---

<MainGridLayout>
  <PostPage page={page} />
  <Pagination
    class="mx-auto onload-animation"
    page={page}
    style=`animation-delay: calc(var(--content-delay) + ${(len)*50}ms)`
  />
</MainGridLayout>

<script>
  const userLang = navigator.language.split("-")[0];
  const localLang = localStorage.getItem("lang") || "";
  if (!localLang) {
    localStorage.setItem("lang", userLang);
  }
</script>
